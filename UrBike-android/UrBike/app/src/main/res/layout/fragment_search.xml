<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_map"
    tools:context="com.app.urbike.urbike.Fragment.SearchFragment">
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:id="@+id/logo"
        android:src="@drawable/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/intro_size"
        android:text="@string/intro"
        android:layout_below="@id/logo"
        android:id="@+id/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:background="@drawable/edittext_landing"
        android:hint="@string/destination"
        android:layout_marginTop="@dimen/below_logo"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_below="@id/direction"
        android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textIsSelectable="false"
        android:singleLine="true"/>
    <ImageButton
        android:id="@+id/button_ok_1"
        android:src="@drawable/check"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_landing"
        android:layout_width="match_parent"
        android:layout_height="75dp" />
</RelativeLayout>
